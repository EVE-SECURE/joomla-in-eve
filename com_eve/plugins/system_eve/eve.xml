<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
	<name>System - EVE</name>
	<version>0.2</version>
	<description>Joomla! in EVE</description>
	<license>GNU/GPL, see http://www.gnu.org/licenses/gpl.html</license>
	<author>Pavol Kovalik</author>
	<creationDate>April 2008</creationDate>
	<authoremail>kovalikp@gmail.com</authoremail>
	<authorurl>http://eve.webnamieru.sk</authorurl>
	<copyright>(C) 2008 - 2009 Pavol Kovalik</copyright>
	<description>Initializes stuff when accessing site from EVE IGB</description>
	<files>
		<filename plugin="eve">eve.php</filename>
	</files>
	<administration>
		<languages>
			<language tag="en-GB">en-GB.plg_system_eve.ini</language>
		</languages>
	</administration>
	<params>
		<param name="run_scheduler" type="radio" default="1" label="PARAM_RUN_SCHEDULER" description="DESC_RUN_SCHEDULER">
			<option value="0">DISABLE</option>
			<option value="1">CLI_ONLY</option>
			<option value="2">ALWAYS</option>			
		</param>
		<param name="igb_template" type="text" default="eve_igb" label="PARAM_IGB_TEMPLATE" description="DESC_IGB_TEMPLATE" />
		<param name="trustme" type="text" label="PARAM_IGB_TRUSTME_MESSAGE" description="DESC_IGB_TRUSTME_MESSAGE" 
			default="Add this site to your trusted sites to allow more advanced features.">
		</param>
	</params>
</install>