<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>EVE</name>
	<version>0.2</version>
	<description>Joomla! in EVE - Core</description>
	<license>GNU/GPL, see http://www.gnu.org/licenses/gpl.html</license>
	<author>Pavol Kovalik</author>
	<creationDate>April 2008</creationDate>
	<authoremail>kovalikp@gmail.com</authoremail>
	<authorurl>http://eve.webnamieru.sk</authorurl>
	<copyright>(C) 2008 - 2009 Pavol Kovalik</copyright>
	
	<installfile>install.php</installfile>
	<uninstallfile>uninstall.php</uninstallfile>
	<install>
		<sql>
			<file driver="mysql">sql/install.compat.sql</file>
			<file driver="mysql" charset="utf8">sql/install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql">sql/uninstall.compat.sql</file>
			<file driver="mysql" charset="utf8">sql/uninstall.sql</file>
		</sql>
	</uninstall>
	
	<languages folder="site/languages">
		<language tag="en-GB">en-GB.com_eve.ini</language>
	</languages>
	<files folder="site">
		<filename>eve.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<administration>
		<menu img="components/com_eve/assets/icon-eve-16.png">EVE</menu>
		<submenu>
			<menu link="option=com_eve&amp;control=char" img="components/com_eve/assets/icon-char-16.png">Characters</menu>
			<menu link="option=com_eve&amp;control=corp" img="components/com_eve/assets/icon-corp-16.png">Corporations</menu>
			<menu link="option=com_eve&amp;control=alliance" img="components/com_eve/assets/icon-alliance-16.png">Alliances</menu>
			<menu link="option=com_eve&amp;control=account" img="components/com_eve/assets/icon-account-16.png">Account</menu>
		</submenu>
		<languages folder="admin/languages">
			<language tag="en-GB">en-GB.com_eve.ini</language>
			<language tag="en-GB">en-GB.com_eve.menu.ini</language>
		</languages>
		<files folder="admin">
			<filename>admin.eve.php</filename>
			<filename>config.xml</filename>
			<filename>filters.xml</filename>
			<filename>index.html</filename>
			<filename>loader.php</filename>
			<filename>install.php</filename>
			<filename>uninstall.php</filename>
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>html</folder>
			<folder>lib</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>sql</folder>
		</files>
	</administration>
</install>
