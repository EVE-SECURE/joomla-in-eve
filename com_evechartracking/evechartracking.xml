<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/component-install.dtd">
<install type="component" version="1.5.0">
	<name>EVECharTracking</name>
	<creationDate>March 2009</creationDate>
	<author>Pavol Kovalik</author>
	<authorEmail>kovalikp@gmail.com</authorEmail>
	<authorUrl>http://code-box.sk</authorUrl>
	<copyright>(C) 2009 Pavol Kovalik</copyright>
	<license>GNU/GPL, see http://www.gnu.org/licenses/gpl.html</license>
	<version>0.2</version>
	<description>Joomla! in EVE - Character Tracking</description>
	
	<installfile>install.php</installfile>
	<uninstallfile>uninstall.php</uninstallfile>
	<install>
		<queries>
			<query>INSERT INTO `#__eve_links` (`name`, `entity`, `component`, `ordering`, `published`) VALUES ('Member Tracking', 'corporation', 'chartracking', 0, 1);</query>
			<query>INSERT INTO `#__eve_apicalls` (`type`, `call`, `authentication`, `authorization`, `pagination`, `delay`, `params`) VALUES ('corp', 'MemberTracking', 'Character', 'Full', NULL, 0, '');</query>
		</queries>
	</install>
	<uninstall>
		<queries></queries>
	</uninstall>
	<files folder="site">
		<filename>evechartracking.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<languages folder="site/languages">
		<language tag="en-GB">en-GB.com_evechartracking.ini</language>
	</languages>
	
	<administration>
		<menu img="components/com_eve/assets/icon-char-16.png">EVE Character Tracking</menu>
		<files folder="admin">
			<filename>admin.evechartracking.php</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>install.php</filename>
			<filename>uninstall.php</filename>
			<folder>models</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin/languages">
			<language tag="en-GB">en-GB.com_evechartracking.ini</language>
			<language tag="en-GB">en-GB.com_evechartracking.menu.ini</language>
		</languages>
	</administration>
</install>
